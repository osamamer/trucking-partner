{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/react/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/react/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/vercel_app.py" },
    { "src": "/(.*)", "dest": "frontend/react/dist/$1" }
  ]
}
