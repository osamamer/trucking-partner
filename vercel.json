{
  "version": 2,
  "buildCommand": "cd frontend/react && npm install && npm run build",
  "outputDirectory": "frontend/react/dist",
  "builds": [
    {
      "src": "backend/vercel_app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/vercel_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}